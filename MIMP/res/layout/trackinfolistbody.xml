<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_interactions_body_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <TextView
        android:id="@+id/track_interactions_body_heightwrapper"
        android:layout_height="65dip"
        android:layout_width="wrap_content" />
        
    <TextView 
        android:id="@+id/track_interactions_body_info"
        android:textSize="20dip"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/track_interactions_body_heightwrapper"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dip" />

    <TextView 
        android:id="@+id/track_interactions_body_descr"
        android:layout_toRightOf="@+id/track_interactions_body_heightwrapper"
        android:layout_below="@+id/track_interactions_body_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:lines="2" />

</RelativeLayout>
